{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    "src/server.ts" // Asegúrate de incluir el archivo del servidor si está en la raíz
  ], // Asegúrate de que este directorio esté incluido
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
